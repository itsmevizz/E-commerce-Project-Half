{{#if products}}
<div id="wrapper">
    <div class="container">
        <div class="row">



            <div id="content" class="col-xs-12">
                <section id="main">
                    <div class=" row">
                        <!-- Left Block: cart product informations & shpping -->
                        <div class=" col-md-6 col-xs-12 col-lg-8 overflow-auto mb-4 scrollbar scrollbar-rare-wind">


                            <!-- cart products detailed -->
                            <div class="card">
                                <div class="row">
                                    <div class="col-md-12 cart">
                                        {{#if products}}
                                        <div class="title">
                                            <div class="row">
                                                {{!-- <div class="col">
                                                    <h4><b>Shopping Cart</b></h4>
                                                </div> --}}

                                                <div class="col align-self-center text-right text-muted">{{cartCount}}
                                                    Items</div>
                                            </div>
                                        </div>
                                        {{/if}}
                                        {{#each products}}
                                        <div class="row border-top border-bottom">
                                            <div class="row main align-items-center">
                                                <div class="col-2"><img class="img-fluid mt-2 mb-2"
                                                        src="/images/{{this.product.img.[0]}}" style="height: 100px;">
                                                </div>
                                                <div class="col">
                                                    <div class="row text-muted"></div>
                                                    <div class="row">{{this.product.Name}}</div>
                                                </div>
                                                <div class="col">
                                                    <div>
                                                        <input type="button" value="-" id="lesss"
                                                            class="button-minus border rounded-circle  icon-shape icon-sm"
                                                            data-field="quantity" style="width: 2rem; height: 2rem;"
                                                            onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)">
                                                        <span type="number" id="{{this.product._id}}" name="quantity"
                                                            class="qty quantity-field border-0 text-center w-25 m-1">{{this.quantity}}</span>
                                                        <input type="button" value="+"
                                                            class="button-plus border rounded-circle icon-shape icon-sm "
                                                            data-field="quantity" style="width: 2rem; height: 2rem;"
                                                            onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">
                                                    </div>
                                                </div>
                                                <div class="col"><span>&#8377;</span> <span
                                                        id="subTtl">{{totalAmt}}{{this.product.Price}}</span>
                                                    <button type="submit" class="close" data-dismiss="alert"
                                                        aria-label="Close">
                                                        <span aria-hidden="true"
                                                            onclick="removeItem('{{this._id}}','{{this.product._id}}')"><i
                                                                class="fa fa-close"></i></span></a>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>

                                </div>
                            </div>
                            <!-- shipping informations -->


                        </div>
                        <!-- Right Block: cart subtotal & cart total -->
                        <div class=" col-md-6 col-xs-12 col-lg-4">


                            <div class="">
                                <div class="cart-detailed-totals">

                                    <div class="card-block">
                                        <div class="cart-summary-line" id="cart-subtotal-products">

                                            <span class="label js-subtotal">
                                                {{cartCount}} items
                                            </span>

                                            <span class="value" id="totalAmt">{{totalAmt}}</span>
                                            <span class="value">&#8377;</span>
                                        </div>
                                        <div class="cart-summary-line" id="cart-subtotal-shipping">
                                            <span class="label">
                                                Shipping
                                            </span>
                                            <span class="value">Free</span>
                                            <div><small class="value"></small></div>
                                        </div>
                                    </div>



                                    <hr class="separator">

                                    <div class="card-block">
                                        <div class="cart-summary-line cart-total">
                                            <span class="label">Total (tax excl.)</span>
                                            <span class="value" id="totalAll">{{totalAmt}}</span>
                                            <span class="value">&#8377;</span>
                                        </div>

                                        {{!-- <div class="cart-summary-line">
                                            <small class="label">Taxes</small>
                                            <small class="value">&#8377;0.00</small>
                                        </div> --}}
                                    </div>

                                    <hr class="separator">
                                </div>


                                <div class="checkout text-sm-center card-block">
                                    <a href="/payment"><button type="button" class="btn btn-primary" disabled>
                                            Placeorder</button></a>

                                </div>


                            </div>





                            <div id="block-reassurance">
                                <ul>
                                    <li>
                                        <div class="block-reassurance-item">
                                            <img src="http://demo.posthemes.com/pos_ecolife_fashion/modules/blockreassurance/img/ic_verified_user_black_36dp_1x.png"
                                                alt="Security policy (edit with Customer reassurance module)">
                                            <span class="h6">Security policy (edit with Customer reassurance
                                                module)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="block-reassurance-item">
                                            <img src="http://demo.posthemes.com/pos_ecolife_fashion/modules/blockreassurance/img/ic_local_shipping_black_36dp_1x.png"
                                                alt="Delivery policy (edit with Customer reassurance module)">
                                            <span class="h6">Delivery policy (edit with Customer reassurance
                                                module)</span>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="block-reassurance-item">
                                            <img src="http://demo.posthemes.com/pos_ecolife_fashion/modules/blockreassurance/img/ic_swap_horiz_black_36dp_1x.png"
                                                alt="Return policy (edit with Customer reassurance module)">
                                            <span class="h6">Return policy (edit with Customer reassurance
                                                module)</span>
                                        </div>
                                    </li>
                                </ul>
                            </div>



                        </div>
                    </div>
                </section>




            </div>



        </div>

    </div>


</div>
